    "# Crawler settings\n",
    "CRAWLER_CONFIG = {\n",
    "    'max_concurrent_workers': 5,\n",
    "    'request_delay': 1,\n",
    "    'timeout': 10,\n",
    "    'content_workers': 3\n",
    "}\n",
    "\n",
    "# Bank codes to crawl\n",
    "BANK_KEYWORDS = {\n",
    "    \"ACB\": [\"ACB\",\"Ng√¢n h√†ng √Å Ch√¢u\",\"ACB Bank\",\"acb bank\"],\n",
    "    \"BAB\": [\"BAB\",\"Bac A Bank\",\"B·∫Øc √Å Bank\",\"bac a bank\"],\n",
